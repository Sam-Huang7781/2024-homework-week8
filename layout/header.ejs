<header
  class="navbar navbar-expand-lg navbar-light bg-neutral-10 pt-10 py-4 d-lg-block d-none"
>
  <div class="container">
    <div
      class="navbar-container rounded-pill px-10 py-4 d-flex justify-content-between w-100"
    >
      <div class="left d-flex align-items-center">
        <a class="navbar-brand me-10" href="./index.html">
          <img
            src="../assets/images/logo.png"
            alt="logo"
            width="200"
            class="d-inline-block align-top"
          />
        </a>
        <!-- Toggler for mobile view -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarContent"
          aria-controls="navbarContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar content -->
        <div class="dropdown me-8">
          <button
            class="nav-link dropdown-toggle"
            type="button"
            id="dropdownMenuButton1"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            探索
          </button>
          <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton1">
            <%- include('./layout/dropdown'); -%>
          </ul>
        </div>
        <!-- Search bar -->
        <form class="d-flex align-items-center position-relative">
          <i class="bi bi-search position-absolute ms-4"></i>
          <input
            class="form-control me-2 ps-12 pe-20 py-4"
            type="search"
            placeholder="搜尋各種音樂、數學、程式及設計課程"
            aria-label="Search"
          />
          <button
            class="btn btn-primary position-absolute end-0 me-4"
            type="submit"
          >
            搜尋
          </button>
        </form>
      </div>
      <!-- Right side buttons -->
      <div class="d-flex align-items-center gap-2">
        <!-- Notification Button -->
        <button
          class="nav-link notify-button me-2 position-relative"
          type="button"
          id="dropdownMenuButtonNotice"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <span
            class="position-absolute translate-middle rounded-circle bg-primary"
            style="width: 10px; height: 10px; right: -12px"
          ></span>
          <i class="bi bi-bell"></i>
        </button>

        <!-- Dropdown Menu -->
        <div
          class="dropdown-menu dropdown-menu-end p-0"
          aria-labelledby="dropdownMenuButtonNotice"
          style="width: 320px; position: absolute; right: 480px"
        >
          <ul
            class="card card-body list-group p-0"
            aria-labelledby="dropdownMenuButtonNotice"
            style="height: 300px; overflow-y: scroll"
          >
            <div
              class="card-header d-flex align-items-center justify-content-end text-primary-100 bg-white"
            >
              <i class="bi bi-check-circle-fill fs-5 me-2"></i>
              <span class="font-size-14">全部標記為已讀</span>
            </div>
            <li
              class="list-group-item active d-flex align-items-center justify-content-center gap-4 p-4"
            >
              <i
                class="bi bi-megaphone fs-5 text-info-100 bg-info-20 d-flex p-3 rounded-circle"
              ></i>
              <div>
                <h5 class="fs-4">
                  系統通知：6 月 30 日 02:00 網站系統排程更新
                </h5>
                <span class="font-size-14 text-neutral-60">4 天前</span>
              </div>
            </li>
            <li
              class="d-flex align-items-center justify-content-center gap-4 p-4"
            >
              <i
                class="bi bi-bell fs-5 text-danger-100 bg-danger-20 d-flex p-3 rounded-circle"
              ></i>
              <div>
                <h5 class="fs-4">
                  募資開課：您購買的募資課程已成功開課！將於 3 天後公布課綱！
                </h5>
                <span class="font-size-14 text-neutral-60">7 天前</span>
              </div>
            </li>
            <li
              class="list-group-item active d-flex align-items-center justify-content-center gap-4 p-4"
            >
              <i
                class="bi bi-megaphone fs-5 text-info-100 bg-info-20 d-flex p-3 rounded-circle"
              ></i>
              <div>
                <h5 class="fs-4">
                  系統通知：6 月 21 日 02:00 網站系統排程更新
                </h5>
                <span class="font-size-14 text-neutral-60">6 天前</span>
              </div>
            </li>
          </ul>
        </div>

        <!-- Shopping Cart Button -->
        <button
          class="btn cart-button position-relative me-3"
          aria-label="Shopping cart"
        >
          <span
            class="position-absolute rounded-circle bg-primary badge-dot fs-3 text-white"
            >2</span
          >
          <i class="bi bi-cart3"></i>
        </button>

        <!-- Login/Register Button -->
        <button class="btn btn-primary">登入 / 註冊</button>
      </div>
    </div>
  </div>
</header>

